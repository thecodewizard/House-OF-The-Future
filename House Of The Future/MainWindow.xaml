<Window x:Class="House_Of_The_Future.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:House_Of_The_Future"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525"
        DataContext="{StaticResource mainvm}">
    <Grid IsEnabled="{Binding ConnectionSuccess}">
        <!-- POSSIBILITY 1 -->
        <Grid DataContext="{StaticResource mainvm}" Panel.ZIndex="1">
            <!-- THE DATACONTEXT HERE POINTS TO THE VIEWMODEL DIRECTLY -->
            <!-- THIS GRID CAN CONTAIN ALL THE COMMANDS -->

        </Grid>
        <Grid>
            <!-- THE DATACONTEXT HERE POINTS TO THE VIEWMODEL PROCCESSING LOGICAL LAYER -->
            <!-- THIS GRID CAN CONTAIN ALL THE STATUSSES -->

        </Grid>

        <!-- POSSIBILITY 2 -->
        <Grid>
            <CheckBox IsChecked="{Binding Core.IsLightWoonkamerOn}" Panel.ZIndex="5" />
            <Button Command="{Binding ToggleLEDWoonkamer}">
                <Image Source="{Binding Core.IsLightWoonkamerOn, Converter={StaticResource lightImageConverter}}" />
            </Button>
        </Grid>
    </Grid>
</Window>
